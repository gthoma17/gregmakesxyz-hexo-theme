<article class="blog-post">

    <!-- Title -->
    <h2 class="blog-post-title">
        <a href="<%- config.root %><%- item.path %>">
            <%- item.title %>
        </a>
    </h2>

    <!-- Post Date -->
    <p class="blog-post-meta">
        <%= item.date.format(config.date_format) %>
    </p>

    <!-- Content -->
    <section class="blog-post-content">
        <%- item.content %>
    </section>

</article>
